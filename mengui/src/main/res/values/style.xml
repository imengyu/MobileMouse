<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--按钮样式-->
    <style name="ButtonCommon" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorDisabled</item>
    </style>

    <style name="ButtonCommonDark" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/btn_normal_dark</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorDisabled</item>
    </style>

    <style name="ButtonTransParent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/btn_transparent</item>
    </style>

    <style name="ButtonRoundPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_round_primary</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorDisabledLight</item>
    </style>

    <style name="ButtonRound" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorDisabled</item>
    </style>

    <style name="ButtonDarkItem" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_dark_item</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <!--对话框样式-->

    <!--对话框基础样式-->
    <style name="BaseDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorDisabled</item>
        <item name="android:colorControlNormal">@android:color/darker_gray</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomDialog" parent="BaseDialog">
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WhiteRoundDialog" parent="BaseDialog">
        <item name="android:titleTextColor">@android:color/black</item>
        <item name="android:windowBackground">@drawable/dialog_white_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonRound</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/ButtonRound</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonRoundPrimary</item>
    </style>

    <style name="WhiteRoundCustomDialog" parent="BaseDialog">
        <item name="android:windowBackground">@drawable/dialog_white_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--对话框动画-->
    <style name="DialogBottomPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_up_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_down_hide</item>
    </style>

    <style name="DialogTopPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_down_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_up_hide</item>
    </style>

    <style name="DialogFadePopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_show</item>
        <item name="android:windowExitAnimation">@anim/fade_hide</item>
    </style>

    <style name="DialogZoomPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/zoom_show</item>
        <item name="android:windowExitAnimation">@anim/zoom_hide</item>
    </style>
</resources>